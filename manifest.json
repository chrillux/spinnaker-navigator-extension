{
  "manifest_version": 3,
  "name": "Spinnaker Navigation Extension",
  "version": "1.0",
  "description": "Adds navigation arrows to Spinnaker for easier navigation",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://spinnaker.quinyx.io/*"],
  "content_scripts": [
    {
      "matches": ["*://spinnaker.quinyx.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "48": "images/icon.png"
  },
  "action": {
    "default_title": "Spinnaker Navigation Extension",
    "default_icon": {
      "48": "images/spinnaker.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "spinnaker-nav@quinyx.com", 
      "strict_min_version": "102.0"
    }
  }
}
